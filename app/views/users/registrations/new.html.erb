<head>
  <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
</head>
<div class="col-xs-4"></div>
<div class="col-xs-4">
  <br><br>
  <center><%= image_tag("ColVen", :class => 'img-responsive', size: "200") %></center>
  <br>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <center><label>Correo electrónico</label></center>
    <%= f.email_field :email, autofocus: true, :class => 'form-control' %>
  </div>
<br>
  <div class="field">
    <center><label>Contraseña</label></center>
    <% if @minimum_password_length %>
    <% end %>
    <%= f.password_field :password, autocomplete: "off" , :class => 'form-control'%>
  </div>

  <div class="field">
    <center><label>Confirmar Contraseña</label></center>
    <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control' %>
  </div>

  <div class="actions">
    <center><%= f.submit "Registrarse" , :class => 'btn btn-default'%></center>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
<div class="col-xs-4"></div>
