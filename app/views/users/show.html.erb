<div class="col-md-3"></div>
<div class="col-md-6">
<h1>Ver Usuario</h1>
<p>
  <strong>Nombre:</strong>
  <%= @users.name %>
</p>
<p>
  <strong>Teléfono:</strong>
  <%= @users.phone %>
</p>
<p>
  <strong>Correo electrónico:</strong>
  <%= @users.email %>
</p>
<p>
  <strong>Rol:</strong>
  <%= @users.role %>
</p>
<p>
  <strong>Comisión:</strong>
  <%= @users.commission %>
</p>
<p>
  <strong>Zona:</strong>
  <%= @users.zone %>
</p>
<p>
  <strong>Distribuidor:</strong>
  
  <%= @um=User.where(:email => @users.creator).first.name %> - 
  <%= @um=User.where(:email => @users.creator).first.zone %>
</p>
<% if @users.role == "Commerce" %>
<p>
  <strong>Mayorista:</strong>
  <%= @um=User.where(:email => User.where(:email => @users.creator).first.creator).first.name %> - 
  <%= @um=User.where(:email => User.where(:email => @users.creator).first.creator).first.zone %>
</p>

<% end %>




<br>
<%= link_to 'Ok', home_index_path %>
</div>
