<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <h2><%= link_to 'Nuevo Cliente', new_client_path %></h2>
  <div class="field">
    <h2><label>Cliente Frecuente</label></h2>
    
    <%= select_tag("order[client_id]", options_from_collection_for_select(Client.all, "id", "name"), :class => 'form-control') %>
  </div>
  <h1>Datos de quién recibe</h1>
  <div class="field">
    <h3><label>Valor de intercambio</label></h3>
    <%= f.number_field :value , :class => 'form-control',:required => true %>
  </div>
  <div class="field">
    <h3><label>Documento</label></h3>
    <%= f.text_field :document, :class => 'form-control' ,:required => true %>
  </div>
  <div class="field">
    <h3><label>Nombre completo</label></h3>
    <%= f.text_field :name , :class => 'form-control',:required => true %>
  </div>
  <div class="field">
    <h3><label>Correo electrónico</label></h3>
    <%= f.text_field :email , :class => 'form-control',:required => true %>
  </div>
  <div class="field">
    <h3><label>Teléfono</label></h3>
    <%= f.text_field :phone , :class => 'form-control',:required => true %>
  </div>
  <div class="field">
    <h3><label>Banco y número de cuenta</label></h3>
    <%= f.text_field :account, :class => 'form-control' ,:required => true %>
  </div>
  <br>
    <div class="actions">
    <%= submit_tag "Siguiente", class: "btn btn-default" %>
  </div>
  <% if current_user.role=="Transfer"%>
    <div class="field">
    <label>Comprobante de pago</label>
    <%= f.file_field :voucher %>
    <%end%>
    </div>
<% end %>
